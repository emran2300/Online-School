@model List<S.EF.Cours>
@{
    ViewBag.Title = "CourseList";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}


<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Available Course List</h4>
            </div>
            

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <div class="table-responsive">
                        <table class="table text-nowrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0">Name</th>
                                    <th class="border-top-0">Description</th>
                                    <th class="border-top-0">Capacity</th>
                                    <th class="border-top-0">Price</th>
                                    <th class="border-top-0">Total Student</th>
                                    <th class="border-top-0">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td>@c.Name</td>
                                        <td>@c.Description</td>
                                        <td>@c.Capacity</td>
                                        <td>@c.Cost</td>
                                        <td>@c.Enroll</td>
                                        <td><a class="btn btn-info" href="EnrollICourse/@c.Id">Enroll In this course</a></td>
                                        @*<td>@Html.ActionLink("Enroll In this course", "EnrollInCourse", "TeacherController", c.Id, new { @class= "btn btn-info" })</td>*@
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2022 Online Education System.
        All rights reserved. Design
        by <a href="https://www.facebook.com/emranmho/" target="_blank">Emran</a>
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>


