@model List<S.EF.CourseStudentMap>
@{
    ViewBag.Title = "MyCourse";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}


<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Course List Table</h4>
            </div>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <div class="table-responsive">
                        <table class="table text-nowrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0">Name</th>
                                    <th class="border-top-0">Description</th>
                                    <th class="border-top-0">Capacity</th>
                                    <th class="border-top-0">Price</th>
                                    <th class="border-top-0">Enroll</th>
                                    <th class="border-top-0">Teacher</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td>@c.Cours.Name</td>
                                        <td>@c.Cours.Description</td>
                                        <td>@c.Cours.Capacity</td>
                                        <td>@c.Cours.Cost</td>
                                        <td>@c.Cours.Enroll</td>
                                        <td>@c.Cours.Teacher.Name</td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2022 Online Education System.
        All rights reserved. Design
        by <a href="https://www.facebook.com/emranmho/" target="_blank">Emran</a>
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>




