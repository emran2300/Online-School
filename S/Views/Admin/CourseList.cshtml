@model List<S.EF.Cours>
@{
    ViewBag.Title = "CourseList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Course List Table</h4>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">
                    @Html.ActionLink("Add New Course", "AddCourse", "Admin", new { @class = "btn btn-primary" })
                </h4>
            </div>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <h3 class="box-title">Teacher Table</h3>
                    <div class="table-responsive">
                        <table class="table text-nowrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0">Name</th>
                                    <th class="border-top-0">Description</th>
                                    <th class="border-top-0">Capacity</th>
                                    <th class="border-top-0">Price</th>
                                    <th class="border-top-0">Enroll</th>
                                    <th class="border-top-0">Status</th>
                                    <th class="border-top-0">Teacher</th>
                                    <th class="border-top-0">Status Change</th>
                                    <th class="border-top-0">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td>@c.Name</td>
                                        <td>@c.Description</td>
                                        <td>@c.Capacity</td>
                                        <td>@c.Cost</td>
                                        <td>@c.Enroll</td>
                                        <td>@c.Status</td>
                                        @if (c.Teacher != null)
                                        {
                                            <td>@c.Teacher.Name</td>
                                            @*<td><a href="" data-bs-toggle="modal" data-bs-target="#exampleModal">@c.Teacher.Name</a>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Teacher's Info</h5>
                        </div>
                        <div class="modal-body">
                            Name: @c.Teacher.Name. <br />
                            Address: @c.Teacher.Address <br />
                            Phone: @c.Teacher.Phone <br />
                            Bio: @c.Teacher.Bio <br />
                            Expert: @c.Teacher.ExpartArea <br />
                        </div>
                    </div>
                </div>
            </div>
            </td>*@
                                        }
                                        else
                                        {
                                            <td>No Teacher</td>
                                        }

                                        
                                    <td><a class="btn btn-outline-warning" href="">Change</a></td>
                                       
                                    <td>
                                        <a class="btn btn-info" href="UpdateCourse/@c.Id">Edit</a>
                                        @*@Html.ActionLink("Edit", "UpdateCourse", "Admin", new { @class = "btn btn-outline-warning" })*@
                                            
                                            
                                            <a class="btn btn-danger" href="DeleteCourse/@c.Id">Delete</a>
                                        </td>

                                    </tr>
                                    
                                  }


                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2022 Online Education System.
        All rights reserved. Design
        by <a href="https://www.facebook.com/emranmho/" target="_blank">Emran</a>
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>


